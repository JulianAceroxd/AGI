<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
</head>

<body>
  <%- include('./NavBar.ejs'); %>
    <div id="content">
      <section>
        <div class="container">
          <div class="row">
            <div class="col-lg-9">
              <h1>VARIEDADES AGROIDEA </h1>


              <hr class="w-100">

              <form action="/RVariedad" enctype="multipart/form-data" method="post">
                <div class="form-group row">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Variedad</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" name="Nombre" placeholder="Nombre" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Catalogo </label>
                  <div class="col-sm-10">
                    <input type="file" class="form-control"  accept="application/pdf" name="file1" id="inputPassword3"  placeholder="Apellido" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Catalogo In Vitro</label>
                  <div class="col-sm-10">
                    <input type="file" class="form-control" accept="application/pdf" name="file2" id="inputPassword3" placeholder="Apellido" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Catalogo In Vivo</label>
                  <div class="col-sm-10">
                    <input type="file" class="form-control" accept="application/pdf" name="file3" id="inputPassword3" placeholder="Apellido" required>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Registrar Variedad</button>
                  </div>
                </div>
              </form>
            </div>

          </div>
          <hr>

          <div class="container table-responsive py-5">
            <table class="table table-bordered table-hover">
              <thead class="thead-dark">
              
                <tr>
                  
                  <th scope="col">Nombre</th>
                  <th scope="col-2">Catalogo</th>
                  <th scope="col-2">In vivo</th>
                  <th scope="col-2">In Vitro</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% Datos.forEach(function (Datos){ %>
                  <td><%=Datos.Nombre%></td>
                  <td><a href="/Catalogos/<%=Datos.Catalogo%>" download><i class="icon ion-md-eye" ></i>
                  </a></td>
                  <td><a href="/Catalogos/<%=Datos.Invivo%>" download><i class="icon ion-md-eye"></i>
                  </a></td>
                  <td><a href="/Catalogos/<%=Datos.Invitro%>" download><i class="icon ion-md-eye"></i>
                    </a></td>
                </tr>
                <%})%>
              </tbody>
            </table>


          </div>
      </section>
    </div>
    </div>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<% if(typeof alert !="undefined"){ %>
<script>
  Swal.fire({
    title:'<%=alertTitle  %>',
    text:'<%=alertMessage  %>',
    icon:'<%=alertIcon  %>',
    showConfirmButton:'<%=showConfirmButton  %>',
    timer:'<%=timer  %>',
  }).then(()=>{
    window.location='<%=ruta  %>'
  })
</script>
  <% } %>
</body>

</html>